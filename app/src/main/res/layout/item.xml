<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_220sdp"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_20sdp"
        >

        <RelativeLayout
            android:id="@+id/imageRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bgIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop">

            </ImageView>

            <TextView
                android:id="@+id/quoteTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/euphoria"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/favIV"
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/favorite_border_black"/>

            <ImageView
                android:id="@+id/saveIV"
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/download_black"
                android:layout_toRightOf="@id/favIV"/>

            <ImageView
                android:id="@+id/shareIV"
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/share"
                android:layout_toRightOf="@id/saveIV"/>

            <ImageView
                android:id="@+id/editIV"
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/edit"
                android:background="@color/black"
                android:padding="@dimen/_4sdp"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@id/shareIV"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>